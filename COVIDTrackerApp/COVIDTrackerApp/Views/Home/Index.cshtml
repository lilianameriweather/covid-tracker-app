@model List<CovidCase>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" type="text/css" href="~/css/site.css">


<div class="text-center">
    <h1 class="display-4 mb-3">COVID Tracker</h1>
    <div class="row p-3 search-bar shadow p-3 mb-5 bg-body-tertiary rounded">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "Home")">
                <div class="form-group">
                <input 
                    type="number" 
                    class="form-control" 
                    name="searchedDate" 
                    placeholder="Filter By Date" 
                    aria-label="Date">
                    <button type="submit" class="btn btn-primary">Search</button>
            </div>
            </form>
        </div>
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "Home")">
                <div class="form-group">
                <input type="text" 
                    class="form-control" 
                    name="searchedState" 
                    placeholder="Filter By State" 
                    aria-label="State">
                <button type="submit" class="btn btn-warning">Search</button>
            </div>
            </form>
        </div>
    </div>

    @if (Model != null)
    {
        <table>
            <tr>
                <th>Date</th>
                <th>State</th>
                <th>Total</th>
                <th>Positive</th>
                <th>Negative</th>
                <th>Hospitalized</th>

            </tr>
            @foreach (CovidCase covidCase in Model)
            {
                <tr>
                    <td>@covidCase.Date</td>
                    <td>@covidCase.State</td>
                    <td>@(covidCase.Total != null ? covidCase.Total : "-")</td>
                    <td>@(covidCase.Positive != null ? covidCase.Positive : "-")</td>
                    <td>@(covidCase.Negative != null ? covidCase.Negative : "-")</td>
                    <td>@(covidCase.Hospitalized != null ? covidCase.Hospitalized : "-")</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No data to show...</p>
    }
</div>